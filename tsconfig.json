{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "pretty": true,
        "module": "CommonJS",
        "target": "ES6",
        "importsNotUsedAsValues": "error",
        "lib": ["ESNext", "DOM"],
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "mocha"],
        "sourceMap": true,
				"jsx": "react-jsx",
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "exclude": ["dist/**"]
}
