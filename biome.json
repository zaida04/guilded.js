{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "dist",
            "node_modules",
            "types",
            ".next",
            "generated",
            "*.json"
        ]
    },
    "formatter": {
        "enabled": true,
        "lineEnding": "lf",
        "indentWidth": 2,
        "indentStyle": "tab",
        "lineWidth": 200
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off",
                "noParameterAssign": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noExplicitAny": "warn"
            }
        }
    }
}