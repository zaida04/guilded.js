{
    "name": "@guildedjs/main",
    "private": true,
    "version": "0.0.0",
    "description": "Overarching repository for the Guilded.JS repository",
    "author": "Zaid \"Nico\" <contact@nico.engineer>",
    "scripts": {
        "build": "yarn workspaces run build",
        "lint": "npx eslint packages/ scripts/",
        "lint:fix": "yarn lint --fix",
        "docs": "npx rimraf docs && npx typedoc && npx ts-node scripts/post-docs.ts",
        "test": "npx nyc mocha -r ts-node/register ./packages/**/__tests__/*.test.ts",
        "test:build": "yarn build && yarn test",
        "prepublishOnly": "yarn lint && yarn workspaces run prepublishOnly",
        "prepare": "npx husky install",
        "prettier": "npx prettier --write **/*.{ts,js,json,yml,yaml,md}",
        "refresh": "npx ts-node scripts/refresh.ts"
    },
    "devDependencies": {
        "@sapphire/eslint-config": "3.3.1",
        "@types/chai": "4.3.0",
        "@types/mocha": "9.1.0",
        "@types/rimraf": "3.0.2",
        "@typescript-eslint/eslint-plugin": "3.10.1",
        "@typescript-eslint/parser": "3.10.1",
        "chai": "4.3.6",
        "dotenv": "8.6.0",
        "eslint": "8.11.0",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-prettier": "3.4.1",
        "gen-esm-wrapper": "1.1.3",
        "husky": "6.0.0",
        "lerna": "3.22.1",
        "lint-staged": "10.5.4",
        "mocha": "9.2.1",
        "nyc": "15.1.0",
        "prettier": "2.5.1",
        "pretty-quick": "3.1.3",
        "rimraf": "3.0.2",
        "ts-node": "10.6.0",
        "typedoc": "0.22.13",
        "typedoc-plugin-remove-references": "0.0.6",
        "typescript": "4.5.4"
    },
    "contributors": [
        {
            "name": "Zaid \"Nico\"",
            "email": "contact@nico.engineer",
            "url": "https://github.com/zaida04"
        },
        {
